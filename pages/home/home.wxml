<view class='page'>
  <view class="stv-container">
    <view class='tab-bar-container'>
    <view class="tab-bar">
      <view wx:for="{{tabs}}" wx:key="unique" data-index=
      "{{index}}" bindtap="handlerTabTap" class="tab {{activeTab==index?'tab-active':''}}" style="width: {{stv.windowWidth/tabs.length}}rpx">
          <text>{{item}}</text>
        </view>
        <view style="width: {{stv.lineWidth}}rpx; left: {{stv.offset/tabs.length+35}}rpx" class="under-line {{!stv.tStart? 'withAnimate': ''}}"></view>
      </view>
    </view>
    
    <view class='tags'>
      <view class='tag active'>#所有</view><view class='tag'>#读书</view><view class='tag'># 融资</view>
    </view>

    <view class="scroll-view">
      <view bindtouchstart="handlerStart" catchtouchmove="handlerMove" bindtouchcancel="handlerCancel" bindtouchend="handlerEnd"  class="scroll-view-wrapper {{!stv.tStart? 'withAnimate': ''}}" style="left: -{{stv.offset}}px">
        <view style="width: {{stv.windowWidth}}px;" wx:for="{{tabs}}" wx:key="unique" class="one-scene">
          <scroll-view style="height:100%" scroll-y>
            <view wx:for="1" wx:key="unique">
              <text>{{page}}滑动</text>
            </view>
          </scroll-view>
        </view>
      </view>
    </view>
  </view>
</view>
